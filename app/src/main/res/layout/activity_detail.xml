<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.bahadur.recyclerviewjsonexample.DetailActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:id="@+id/DImageId"
        android:src="@mipmap/ic_launcher"
        android:scaleType="fitXY"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Creator Name: "
        android:id="@+id/Dcreatorname"
        android:textSize="22sp"
        android:textStyle="italic|bold"
        android:layout_marginTop="11dp"
        android:layout_below="@+id/DImageId"
        android:layout_marginLeft="15dp"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_height="wrap_content"
        android:text="Likes"
        android:id="@+id/DLikes"
        android:textSize="18sp"
        android:textStyle="italic"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/Dcreatorname"
        android:layout_alignParentStart="true" />

</RelativeLayout>
